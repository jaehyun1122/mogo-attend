# -------------------------------
# 인증 및 보안 관련 설정
# -------------------------------

# 외부 API 호출 시 사용할 사용자 정의 API 키
API_KEY=

# 로그인 요청 시 사용할 사용자 아이디
LOGIN_ID=

# 로그인 요청 시 사용할 사용자 비밀번호
LOGIN_PW=

# 로그인 처리 URL (POST 요청 대상)
LOGIN_URL=https://mogo.kr/catch_tail/?action=login

# -------------------------------
# 자동 출석 시스템 관련 설정
# -------------------------------

# 초기 진입 페이지 (세션 쿠키 및 CSRF 토큰 추출용)
TARGET_PAGE_URL=https://mogo.kr/catch_tail/?action=main

# 실제 출석을 처리하는 POST 요청 URL
ATTENDANCE_URL=https://mogo.kr/catch_tail/?action=attendance

# 사이트 URL (Turnstile 캡차 우회 시 필요)
SITE_URL=https://mogo.kr/catch_tail

# -------------------------------
# 캡차 처리 (2Captcha) 관련 설정
# -------------------------------

# 2Captcha API 키
CAPTCHA_API_KEY=

# 2Captcha API 기본 주소
CAPTCHA_SERVICE_URL=https://2captcha.com

# 2Captcha 작업 응답 대기 최대 횟수
CAPTCHA_MAX_ATTEMPTS=6

# 2Captcha 결과 체크 간격 (초 단위)
CAPTCHA_CHECK_INTERVAL=5

# -------------------------------
# corn 관련 설정
# -------------------------------

# cron/last.php 출석 간격 (예: 3600초 1시간)
ATTEND_INTERVAL=3600